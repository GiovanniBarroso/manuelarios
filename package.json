{
  "name": "manuelarios-landing",
  "version": "1.0.0",
  "description": "Landing page de Manuela Rios MicropigmentaciÃ³n",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"public/**/*.{html,css,js}\"",
    "lint:format": "prettier --check \"public/**/*.{html,css,js}\"",
    "lint:html": "htmlhint \"public/**/*.html\"",
    "lint:css": "stylelint \"public/**/*.css\"",
    "lint:js": "eslint public/js/*.js",
    "lint:links": "serve public -l 8080 & blc http://127.0.0.1:8080 --recursive --filter-level 3 --exit",
    "lint": "pnpm run lint:format && pnpm run lint:html && pnpm run lint:css && pnpm run lint:js"
  },
  "devDependencies": {
    "broken-link-checker": "^0.7.8",
    "eslint": "^9.35.0",
    "htmlhint": "^1.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0"
  },
  "lint-staged": {
    "public/**/*.html": [
      "prettier --write",
      "htmlhint"
    ],
    "public/**/*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "public/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
